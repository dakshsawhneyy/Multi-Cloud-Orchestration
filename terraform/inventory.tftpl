[webservers]

%{ if workspace == "aws" ~}
%{ for index, ip in aws_ips ~}
aws_server_${index+1} ansible_host=${ip} cloud_provider="AWS"
%{ endfor ~}
%{ endif ~}

%{ if workspace == "azure" ~}
%{ for index, ip in azure_ips ~}
azure_server ansible_host=${ip} cloud_provider="Azure"
%{ endfor ~}
%{ endif ~}

[all:vars]
ansible_user=ubuntu
# ansible_ssh_private_key_file=~/.ssh/id_rsa
ansible_ssh_common_args='-o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null'